var $container = $('#items')
$(document).ready(function() {
  $("a.fancybox").fancybox();
});

var $items = $( "<%= escape_javascript(render(@items)) %>" );
$container.append($items);
$container.imagesLoaded( function () {
  $container.masonry( "appended", $items, true );
});


<% if @items.next_page %>
  $('.pagination').replaceWith('<%= escape_javascript(will_paginate(@items)) %>');
<% else %>
  $('.pagination').remove();
<% end %>
<% sleep 1.5 %>