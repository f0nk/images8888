<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container2">
      <nav>

        <ul class="nav pull-left">
          <div class="btn-toolbar">

            <div class="btn-group">
             <div class="btn btn-small btn-success" data-toggle="dropdown">Category</div>
                <div class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                 <% @categorylist.each do |i| %>
                 <li><%= link_to i.name, "tagged?category=" + i.name %><li>
                 <% end %>
              </div>  
            </div>

            <div class="btn-group">
             <div class="btn btn-small btn-info" data-toggle="dropdown">Source</div>
                <div class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                 <% @sourcelist.each do |i| %>
                 <li><%= link_to i.name, "tagged?source=" + i.name %><li>
                 <% end %>
              </div>  
           </div>


            <div class ="btn-group">
              <%= search_form_for @search do |f| %>
              <%= f.text_field :title_cont, :class =>"input-medium search-query" %>
              <button type="submit" class="btn btn-small btn-danger">Search</button>
              <% end %> 
            </div>

          </div>        
        </ul>

        <ul class="nav pull-right">
          <div class="dropdown" id ="rightMenuBtn">
            <div class="btn btn-small btn-info" data-toggle="dropdown"></div>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
             <li> <%= link_to 'Home', root_path %></li>
             <li> <%= link_to 'About', about_path %></li>
             <li> <%= link_to 'Tag cloud', tagcloud_path %></li>
             <li> <%= link_to 'Terms', terms_path %></li>
            </ul>
          </div>
        </ul>

      </nav>
    </div>
  </div>
</header>